<div class="container log-in">
<div class="panel panel-default">
<div class="panel-heading">
<div class="panel-body">
<!-- @author: Zuishek 
   the id of the owner of the ride is passed in the form tag so the create method can acquire the id -->
<%= form_tag messages_path(:user_id => @receiver), :class =>'form-horizontal', method: :post do %>

     
     
   <div class="form-group">
   	  <%= label_tag 'message[subject]', 'Subject:', class: 'col-sm-2 control-label' %>
        <div class="col-sm-4">
   	  <%= text_field_tag 'message[subject]', nil, class: 'form-control1', required: true %>
      </div>
   </div>

   <div class="form-group">
   	<%= label_tag 'message[body]', 'Message:', class: 'col-sm-2 control-label' %>
      <div class="col-sm-4">
   	<%= text_area_tag 'message[body]', nil, cols: 3, class: 'form-control1', required: true %>
   </div>
   </div>

  

   <%= submit_tag 'Send', class: 'btn btn-primary' %>
<% end %>
</div>
</div>
</div>
</div>