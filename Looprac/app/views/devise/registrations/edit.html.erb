<% if current_user.blank? %>
<%= link_to 'Back to Home', root_path %> 
<% else %>
<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2 class="center">Edit <%= resource_name.to_s.humanize %></h2>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
      <%= devise_error_messages! %>


      <div class="form-group">
        <%= f.label :First_name, class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
          <%= f.text_field :first_name, autofocus: true, class: 'form-control form-control2'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :Last_name, class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
          <%= f.text_field :last_name, autofocus: true, class: 'form-control form-control2'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :username, class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
          <%= f.text_field :username, autofocus: true, class: 'form-control form-control2'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :age, class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
          <%= f.text_field :age, autofocus: true, class: 'form-control form-control2'  %>
        </div>
      </div>


      <div class="form-group">
        <%= f.label :email, class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
          <%= f.email_field :email, class: 'form-control form-control2'  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :facebook, class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
          <%= f.text_field :facebook, autofocus: true, class: 'form-control form-control2', placeholder:"Enter your Facebook profile url" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :twitter, class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
          <%= f.text_field :twitter, autofocus: true, class: 'form-control form-control2' , placeholder:"Enter your Twitter profile url" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :google_plus, class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
          <%= f.text_field :googleplus, autofocus: true, class: 'form-control form-control2' , placeholder:"Enter your Google Plus profile url" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :Gender, class: "col-sm-2 control-label" %>
        <%= f.radio_button :gender, 0, checked: true %>
        <%= f.label :Male %>
        <%= f.radio_button :gender, 1 %>
        <%= f.label :Female %>
      </div>


      <div class="form-group">
        <%= f.label :car_model, class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
          <%= f.text_field :car_model, autofocus: true, class: 'form-control form-control2'  %>
        </div>
      </div>


      <div class="form-group">
        <%= f.label :new_password, class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control form-control2', placeholder:"Leave blank if you don't want to change it"  %>
        </div>
      </div>


      <div class="form-group">
        <%= f.label :password_confirmation, class: 'col-sm-2 control-label' %>
        <div class="col-sm-6">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control form-control2', placeholder:"Confirm your new password"  %>
        </div>
      </div>


      <div class="form-group">
        <%= f.label :current_password, class: 'col-sm-2 control-label' %>
        <div class="col-sm-6">
          <%= f.password_field :current_password, autocomplete: "off", class: 'form-control form-control2', placeholder:"Enter your current password to confirm changes" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-6 center">
          <%= f.submit "Update", class: "btn btn-primary" %>
          <%= link_to "Back", :back , class: "btn btn-primary"%>
        </div>
      </div>
      <% end %>
      <div class="center">
        <p>Do you want to leave us ? <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger btn-xs' %></p>

      </div>
    </div>
  </div>
  <% end %>


