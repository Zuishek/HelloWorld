<div class="container log-in">
<div class="panel panel-default">
<div class="panel-heading">
<h2 class="center">Sign up</h2>
</div>
<div class="panel-body">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
<%= devise_error_messages! %>

<div class="form-group">
    <%= f.label :First_name, class: "col-sm-3 control-label text-right"%>
    <div class="col-sm-6">
        <%= f.text_field :first_name, class: "form-control form-control1",autofocus: true, placeholder:"Enter your first name" %>
    </div>
</div>

<div class="form-group">
    <%= f.label :Last_name, class: "col-sm-3 control-label" %>
    <div class="col-sm-6">
        <%= f.text_field :last_name, class: "form-control form-control1",autofocus: true, placeholder:"Enter your last name"  %>
    </div>
</div>

<div class="form-group">
    <%= f.label :User_name, class: "col-sm-3 control-label" %>
    <div class="col-sm-6">
        <%= f.text_field :username, class: "form-control form-control1",autofocus: true, placeholder:"Pick a username" %>
    </div>
</div>

<div class="form-group">
    <%= f.label :Gender, class: "col-sm-3 control-label" %>
    <%= f.radio_button :gender, 0 %>
    <%= f.label :Male %>
    <%= f.radio_button :gender, 1 %>
    <%= f.label :Female %>
</div>

<div class="form-group">
    <%= f.label :email, class: "col-sm-3 control-label" %>
    <div class="col-sm-6">
        <%= f.email_field :email, class: "form-control form-control1",placeholder:"Enter Email" %>
    </div>
</div>

<div class="form-group">
    <%= f.label :password, class: "col-sm-3 control-label" %>
    <div class="col-sm-6">
        <%= f.password_field :password, autocomplete: "off", class: "form-control form-control1",placeholder:"Enter Password" %>
    </div>
</div>

<div class="form-group">
    <%= f.label :password_confirmation, class: "col-sm-3 control-label" %>
    <div class="col-sm-6">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control1",placeholder:"Retype your password" %>
    </div>
</div>
<div class="form-group">
      <div class="row">
        <div class="col-sm-10 col-sm-offset-2">
          <div class="checkbox">
            <label>
              <input type="checkbox"> I want to receive updates about the site!
            </label>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-10 col-sm-offset-2">
          <div class="checkbox">
            <label>
              <input type="checkbox"> I agree to the <a href="#">terms and conditions</a>.
            </label>
          </div>
        </div>
      </div>
    </div>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-6 center">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
</div>

<% end %>
</div>
</div>