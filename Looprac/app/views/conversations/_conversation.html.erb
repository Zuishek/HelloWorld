<li class="list-group-item clearfix">

	<%= names_other_participants_helper(conversation) %>

	<p><%= link_to conversation.subject, conversation_path(conversation) %></p>
     

	<div class="btn-group-vertical pull-right">
		<% if conversation.is_unread?(current_user) %>
		<%= link_to 'Mark as read', mark_as_read_conversation_path(conversation), class: 'btn btn-xs btn-info', method: :post %>
		<% end %>
		 
		<%= link_to 'Delete', conversation_path(conversation), class: 'btn btn-xs btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
	</div>


	<p><%= conversation.last_message.body %>
		<small>(<span class="text-muted"><%= conversation.last_message.created_at.strftime("%-d %B %Y, %H:%M:%S") %></span>)</small></p>
		
</li>